<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/sample_activity_horizontal_margin"
    android:paddingRight="@dimen/sample_activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/sample_list_selector">

    <TextView
        android:id="@+id/sampleNumber"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:background="@drawable/sample_number" />

    <TextView
        android:id="@+id/sampleClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="4dp"
        tools:text="@string/sample_source_code"/>

</LinearLayout>