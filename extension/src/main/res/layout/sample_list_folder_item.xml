<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/sample_activity_horizontal_margin"
    android:paddingRight="@dimen/sample_activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/imageFlagView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/sample_folder_drag_selector" />

    <ImageView
        android:id="@+id/imageFileType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        tools:src="@drawable/sample_source_folder"/>

    <TextView
        android:id="@+id/fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="@string/sample_source_code"/>

</LinearLayout>