<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/sample_activity_horizontal_margin"
    android:paddingRight="@dimen/sample_activity_horizontal_margin"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/sample_grey_item_selector">

    <ImageView
        android:id="@+id/imageFlagView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/sample_circle"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="@string/sample_source_code"
        app:layout_constraintLeft_toRightOf="@+id/imageFlagView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titleRef"/>

    <TextView
        android:id="@+id/titleRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="@string/sample_source_code"
        app:layout_constraintLeft_toLeftOf="@id/categoryName"
        app:layout_constraintTop_toBottomOf="@+id/categoryName"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/categoryRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="@string/sample_source_code"
        app:layout_constraintLeft_toRightOf="@+id/titleRef"
        app:layout_constraintTop_toTopOf="@+id/titleRef"/>

</androidx.constraintlayout.widget.ConstraintLayout>